<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
    </td>
  <td><%= sale.ends_on %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
  <% if (sale.starts_on > Date.current) %>
  <span class="label label-warning">Upcoming </span>
  <% elsif (sale.ends_on >= Date.current) %>
  <span class="label label-success">Active </span>
  <% elsif (sale.ends_on < Date.current) %>
  <span class="label label-danger">Finished </span>
 
  <% end %>
  </td>
 
</tr>